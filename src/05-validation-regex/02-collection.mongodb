use("platzi_store")

db.createCollection('users', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ['email', 'password', 'role'],  
            properties: {
                name: {
                    bsonType: 'string'
                },
                last_name: {
                    bsonType: 'string'
                },
                email: {
                    bsonType: 'string'
                },
                password: {
                    bsonType: 'string',
                    pattern: '^[A-Za-z0-9]{8,}$'
                    /* Esta es la expresion regular para validar una contrase√±a. Estamos diciendo que se aceptan */
                    /* caracteres de la A-Z (mayus), de la a-z (minus), del 0-1, y que tenga como minimo 8 caracteres "{8,}" */
                    /* "^(expresion regular)$" */
                },
                age: {
                    bsonType: 'number',   // El validador number nos permite poner un minimo y un maximo
                    minimum: 18,
                    maximum: 99
                },
                isSingle: {
                    bsonType: 'bool'
                },
                role: {
                    enum: ['customer', 'seller', 'admin'] 
                }
            }
        }
    }
})











